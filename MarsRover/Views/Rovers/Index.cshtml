@model IEnumerable<MarsRover.Models.Rover>

@{
    ViewData["Title"] = "Index";
}

<h1>Rover Data</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sPosX)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sPosY)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sDir)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.input)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fPosX)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fPosY)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fDir)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sPosX)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sPosY)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sDir)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.input)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fPosX)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fPosY)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fDir)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>


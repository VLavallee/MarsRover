@model MarsRover.Models.Rover
<head>
    <link rel="stylesheet" type="text/css" href="~/css/Styles.css" />
</head>
@{
    ViewData["Title"] = "Delete";
}
<br />
<h1>Are you sure you want to delete this rover data?</h1>


<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StartingPositionX)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartingPositionX)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StartingPositionY)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartingPositionY)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StartingDirection)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartingDirection)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Input)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Input)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FinalPositionX)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FinalPositionX)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FinalPositionY)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FinalPositionY)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FinalDirection)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FinalDirection)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <br />
        <br />
        <a class="btn btn-primary" asp-action="Index"> Back </a>
    </form>
</div>
<style>
    .uppercase {
        text-transform: uppercase;
    }
</style>
